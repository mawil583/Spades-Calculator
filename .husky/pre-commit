#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Run lint-staged to lint only changed files
echo "ğŸ” Running lint-staged on changed files..."
npm run lint:staged

# If lint-staged passes, run tests
if [ $? -eq 0 ]; then
  echo "âœ… Linting passed, running tests..."
  npm run test
else
  echo "âŒ Linting failed. Please fix the issues before committing."
  exit 1
fi